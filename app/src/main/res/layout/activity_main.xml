<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.urbanites.MainActivity">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp">

        <EditText
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/whitebox"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
            android:drawablePadding="24dp"
            android:drawableTint="@color/grey_500"
            android:maxLines="1"
            android:hint="Enter source location"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginRight="36dp"
            android:paddingRight="56dp"
            android:scrollbars="none"
            android:orientation="vertical"
            android:inputType="text"
        />


        <ImageView
            android:id="@+id/currentLoc"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_my_location_black_24dp"
            android:layout_alignTop="@+id/source"
            android:layout_alignParentEnd="true"
            android:tint="@color/grey_900"
        />

        <EditText
            android:id="@+id/dest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/whitebox"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="24dp"
            android:drawableTint="@color/grey_500"
            android:maxLines="1"
            android:hint="Enter destination location"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginRight="8dp"
            android:paddingRight="32dp"
            android:scrollbars="none"
            android:orientation="vertical"
            android:inputType="text"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/source"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
    </RelativeLayout>
</RelativeLayout>
